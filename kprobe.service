[Unit]
Description=Kentik Host Probe Service
After=network.target

[Service]
EnvironmentFile=-/etc/default/kprobe.env
Type=simple
User=root
WorkingDirectory=/root
Environment=KENTIK_API_TOKEN=${KENTIK_API_TOKEN}
ExecStart=/usr/bin/kprobe --email=${KENTIK_API_EMAIL} --token=${KENTIK_API_TOKEN} --interface=${KENTIK_KPROBE_INTERFACE}
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target